<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <div class="page-header">
        <h1>Video Store</h1>
      </div>
      <p>Such a nice video store!</p>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-9">
      <table class="table">
        <thead>
          <tr>
            <th>Year</th>
            <th>Title</th>
            <th class="td-actions">Actions</th>
          </tr>
        </thead>
        <% @videos.each do |post| %>
          <tr>
            <td><%= post.year %></td>
            <td><%= post.title %></td>
            <td class="td-actions">
              <a href="/<%= post.id %>/edit" class="btn">
                Edit
              </a>
              <a href="/<%= post.id %>" class="btn">
                Show
              </a>
              <form method="POST" action="/<%= post.id %>/delete">
                <button class="btn btn-danger">Remove</button>
              </form>
            </td>
          </tr>
        <% end %>
      </table>
    </div>
    <div class="col-sm-3">
      <div class="button-group">
        <a href="/?sort=asc" type="button" class="btn btn-default">
          <span class="glyphicon glyphicon-arrow-up" aria-hidden="true"></span>
          Order by year
        </a>
        <a href="/?sort=desc" type="button" class="btn btn-default">
          <span class="glyphicon glyphicon-arrow-down" aria-hidden="true"></span>
          Order by year
        </a>
      </div>
    </div>
  </div>
</div>
